<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="WithoutBackground" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="WithoutAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Dialog Style  -->
    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
        <item name="android:buttonBarStyle">@style/AlertDialogCustom.PositiveButtonStyle</item>
    </style>
    <style name="AlertDialogCustom.PositiveButtonStyle">
       <item name="android:textColor">#0f0</item>
        <item name="android:textSize">5sp</item>
    </style>
</resources>
